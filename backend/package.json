{
    "name": "app-ginecologia",
    "version": "1.0.0",
    "main": "app.js",
    "repository": "https://github.com/joaorura/app-genicologia.git",
    "author": "Vitor Barcelos <vbc@ic.ufal.br>",
    "license": "MIT",
    "private": true,
    "scripts": {
        "commit": "cz",
        "lint": "eslint . --ext .ts --fix",
        "prettier:check": "prettier --check .",
        "prettier:write": "prettier --write .",
        "knex": "knex --knexfile knexfile.ts",
        "seed:do": "yarn run knex seed:run",
        "migrate:do": "yarn run knex migrate:latest",
        "migrate:undo": "yarn run knex migrate:rollback --all",
        "dev": "yarn run server NODE_ENV=development",
        "prod": " yarn run server NODE_ENV=production",
        "test": "jest --detectOpenHandles --forceExit --config jest.json",
        "server": "ts-node-dev --transpile-only --ignore-watch node_modules -r tsconfig-paths/register src/www.ts"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    },
    "dependencies": {
        "@types/express": "^4.17.9",
        "@types/node": "^14.14.7",
        "express": "^4.17.1",
        "express-graphql": "^0.11.0",
        "graphql": "^15.3.0",
        "graphql-iso-date": "^3.6.1",
        "graphql-tools": "^6.1.0",
        "knex": "^0.21.5-next2",
        "mysql2": "^2.2.5",
        "objection": "^2.2.2",
        "ts-node-dev": "^1.0.0",
        "typescript": "^4.0.5"
    },
    "devDependencies": {
        "@types/jest": "^26.0.15",
        "@types/morgan": "^1.9.2",
        "@types/supertest": "^2.0.10",
        "@typescript-eslint/eslint-plugin": "^4.7.0",
        "@typescript-eslint/parser": "^4.7.0",
        "cz-conventional-changelog": "3.3.0",
        "eslint": "^7.13.0",
        "eslint-config-prettier": "^6.15.0",
        "eslint-plugin-no-loops": "^0.3.0",
        "eslint-plugin-prettier": "^3.1.4",
        "husky": "^4.3.0",
        "jest": "^26.6.3",
        "morgan": "^1.10.0",
        "prettier": "^2.1.2",
        "pretty-quick": "^3.1.0",
        "supertest": "^6.0.1",
        "ts-jest": "^26.4.4",
        "tsconfig-paths": "^3.9.0"
    },
    "config": {
        "commitizen": {
            "path": "node_modules/cz-conventional-changelog"
        }
    }
}
